<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

        <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="124dp"
                android:layout_height="124dp"
                tools:scaleType="centerCrop"
                tools:src="@drawable/test_image"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_image_view"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="Advert name" tools:ignore="RelativeOverlap"/>

        <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="8dp"
                android:background="@null"
                android:src="@drawable/ic_menu_more_black_24dp"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/date_updated_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_image_view"
                android:layout_below="@id/title_text_view"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/grey_600"
                android:textStyle="normal"
                tools:text="Updated:"/>

        <TextView
                android:id="@+id/offer_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_image_view"
                android:layout_below="@id/date_updated_text_view"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/black"
                android:textStyle="normal"
                tools:text="@string/offer_price_per_kg"/>

        <TextView
                android:id="@+id/status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_image_view"
                android:layout_below="@id/offer_price_text_view"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal"
                tools:text="Accepted"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>