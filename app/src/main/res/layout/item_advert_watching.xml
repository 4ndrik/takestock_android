<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

    <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:scaleType="centerCrop"
            tools:src="@drawable/test_image_2"
            tools:ignore="ContentDescription"/>

    <ImageButton
            android:id="@+id/watching_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            android:src="@drawable/layer_list_watching_checked"
            android:background="@android:color/transparent"
            tools:ignore="ContentDescription"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_bottom_dark">

        <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_black_transparent"
                android:layout_margin="8dp"
                android:padding="2dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                tools:text="13 march 2016"
                android:layout_alignParentStart="true"/>

        <TextView
                android:id="@+id/location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/date_text_view"
                android:background="@drawable/rounded_corners_black_transparent"
                android:layout_marginTop="8dp"
                android:padding="2dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                tools:text="Lviv"/>

        <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:shadowColor="@color/black"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:layout_above="@+id/qty_available_text_view"
                tools:text="Advert name" android:maxLines="1"/>

        <TextView
                android:id="@+id/qty_available_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="16dp"
                android:layout_above="@+id/additional_text_view"
                android:textColor="@color/white"
                android:textStyle="normal"
                tools:text="available: 45 kg"/>

        <TextView
                android:id="@+id/guide_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_above="@+id/additional_text_view"
                android:layout_alignParentEnd="true"
                android:textStyle="normal"
                tools:text="Â£25/3 kg"/>

        <TextView
                android:id="@+id/additional_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                tools:text="0 offers \u2022 1000 questions \u2022 300 days left"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>