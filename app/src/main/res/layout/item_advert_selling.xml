<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content.item.advert.selling"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="136dp"
                android:layout_height="136dp"
                tools:scaleType="centerCrop"
                tools:src="@drawable/test_image"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_image_view"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:maxLines="1"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="Chocolate "/>

        <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="8dp"
                android:background="@null"
                android:src="@drawable/ic_menu_more_black_24dp"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/date_updated_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_image_view"
                android:layout_below="@+id/title_text_view"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="12sp"
                android:textColor="@color/grey_400"
                android:textStyle="normal"
                tools:text="13 march 2016"/>

        <TextView
                android:id="@+id/guide_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_image_view"
                android:layout_below="@+id/date_updated_text_view"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:maxLines="1"
                tools:text="45 per kg"/>

        <TextView
                android:id="@+id/qty_available_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_image_view"
                android:layout_below="@+id/guide_price_text_view"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                tools:text="45 kg available"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_image_view"
                android:layout_below="@id/qty_available_text_view"
                android:padding="8dp"
                android:stretchColumns="*"
                android:shrinkColumns="*">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/offers_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        tools:text="100"/>

                <TextView
                        android:id="@+id/questions_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        tools:text="100"/>

                <TextView
                        android:id="@+id/days_left_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        tools:text="100"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal"
                        android:text="offers"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal"
                        android:text="questions"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal"
                        android:text="days left"/>
            </TableRow>

        </TableLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>