<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content.item.advert.selling"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                tools:scaleType="centerCrop"
                tools:src="@drawable/test_image_2"
                tools:ignore="ContentDescription"/>

        <View
                android:layout_width="wrap_content"
                android:layout_height="144dp"
                android:layout_alignBottom="@+id/photo_image_view"
                android:background="@drawable/bg_gradient_bottom_dark"/>

        <TextView
                android:id="@+id/date_updated_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                tools:text="13 march 2016"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap"/>

        <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:shadowColor="@color/black"
                android:textSize="24sp"
                android:textColor="@color/white"
                tools:text="Advert name"
                android:layout_above="@+id/qty_available_text_view"/>

        <TextView
                android:id="@+id/qty_available_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/days_left_text_view"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                tools:text="Available: 100 kg"/>

        <TextView
                android:id="@+id/days_left_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/table_layout"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                tools:text="Days left: 25"
                android:layout_alignParentStart="true"/>

        <TextView
                android:id="@+id/guide_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/table_layout"
                tools:text="Â£25/3 kg"
                tools:ignore="RelativeOverlap"/>

        <!--<ImageButton-->
        <!--android:id="@+id/menu_button"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:padding="8dp"-->
        <!--android:background="@null"-->
        <!--android:src="@drawable/ic_menu_more_white_24dp"-->
        <!--tools:ignore="ContentDescription"/>-->

        <TableLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/photo_image_view"
                android:padding="8dp"
                android:stretchColumns="*"
                android:shrinkColumns="*">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/offers_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        tools:text="100"/>

                <TextView
                        android:id="@+id/questions_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        tools:text="100"/>

                <TextView
                        android:id="@+id/views_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        tools:text="100"/>
            </TableRow>


            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal"
                        android:text="offers"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal"
                        android:text="questions"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal"
                        android:text="views"/>
            </TableRow>

        </TableLayout>

    </RelativeLayout>

