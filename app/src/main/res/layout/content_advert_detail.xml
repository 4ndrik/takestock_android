<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/white"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="64dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="@android:style/TextAppearance.Medium"
                tools:text="Advert very long long long long long long name"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_600"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:text="@string/advert_detail_guide_price"/>

            <TextView
                    android:id="@+id/guide_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    tools:text="Â£ 7.50 per kg"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              style="@style/ViewDivider"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_600"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:text="@string/advert_detail_minimum_order"/>

            <TextView
                    android:id="@+id/minimum_order_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    tools:text="1 kg"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              style="@style/ViewDivider"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_600"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:text="@string/advert_detail_qty_available"/>

            <TextView
                    android:id="@+id/qty_available_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    tools:text="180 kg"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              style="@style/ViewDivider"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/grey_600"
                android:fontFamily="sans-serif-light"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/advert_detail_description"/>

        <TextView
                android:id="@+id/description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textAppearance="@android:style/TextAppearance.Small"
                tools:text="The product that became Nutella was created by an Italian bakery owner called Pietro Ferrero in the 1940s. He decided to try and create a cheaper alternative to chocolate, which, due to the Second World War, was in short supply. It was made by combining hazelnuts, which were easily available locally, and a little cocoa."/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_600"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="@string/advert_detail_location"/>

            <TextView
                    android:id="@+id/location_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    tools:text="Blackpool"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              style="@style/ViewDivider"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_600"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="@string/advert_detail_shipping"/>

            <TextView
                    android:id="@+id/shipping_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    tools:text="Collection only"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              style="@style/ViewDivider"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_600"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="@string/advert_detail_expiry"/>

            <TextView
                    android:id="@+id/expiry_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    tools:text="2016-06-18"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              style="@style/ViewDivider"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_600"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="@string/advert_detail_certification"/>

            <TextView
                    android:id="@+id/certification_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    tools:text="ISO"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              style="@style/ViewDivider"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_600"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="@string/advert_detail_condition"/>

            <TextView
                    android:id="@+id/condition_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    tools:text="New"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              style="@style/ViewDivider"/>

        <FrameLayout
                android:id="@+id/content_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

            <com.devabit.takestock.widget.CircleImageView
                    android:id="@+id/user_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_placeholder_user_96dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/gold"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/user_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/black"
                    tools:text="Mason"/>

            <RatingBar
                    android:id="@+id/user_rating_bar"
                    android:theme="@style/RatingBar"
                    style="?attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="16dp"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    tools:rating="3.7"/>

        </FrameLayout>

        <View android:layout_width="match_parent"
              style="@style/ViewDivider"/>

        <TextView
                android:id="@+id/similar_listing_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textColor="@color/grey_600"
                android:fontFamily="sans-serif-light"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="@string/advert_detail_similar_listing"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/similar_advert_recycler_view"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
