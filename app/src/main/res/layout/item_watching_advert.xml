<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                tools:scaleType="centerCrop"
                tools:src="@drawable/test_image"
                tools:ignore="ContentDescription"/>

        <ImageButton
                android:id="@+id/watching_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignEnd="@+id/photo_image_view"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/layer_list_watching_checked"
                android:background="@android:color/transparent"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:background="@drawable/rounded_corners_black_transparent"
                android:layout_margin="8dp"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                tools:text="13 march 2016"
                android:layout_alignParentStart="true"/>

        <TextView
                android:id="@+id/location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_toEndOf="@+id/date_text_view"
                android:background="@drawable/rounded_corners_black_transparent"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                tools:text="Lviv"/>

        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@color/white"
                android:layout_below="@+id/photo_image_view">

            <TextView
                    android:id="@+id/name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="Chocolate "/>

            <TextView
                    android:id="@+id/guide_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:textStyle="normal"
                    tools:text="Â£ 45/kg"/>

            <TextView
                    android:id="@+id/qty_available_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    tools:text="45 kg available"/>

            <TextView
                    android:id="@+id/additional_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    tools:text="0 offers \u2022 1000 questions \u2022 300 days left"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>