<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_vegetables_gold"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"/>

    <com.devabit.takestock.widget.CircleImageView
            android:id="@+id/user_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_placeholder_user_96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/jam"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:layout_toEndOf="@id/user_image_view"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black"
            tools:text="Mason"
            tools:ignore="RelativeOverlap"/>

    <RatingBar
            android:id="@+id/user_rating_bar"
            android:theme="@style/RatingBar"
            style="?attr/ratingBarStyleSmall"
            android:layout_below="@id/user_name_text_view"
            android:layout_toEndOf="@id/user_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:numStars="5"
            android:stepSize="0.1"
            tools:rating="3.7"
            android:isIndicator="true"/>

    <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_edit_black_alpha_24dp"
            tools:ignore="ContentDescription"/>

</RelativeLayout>