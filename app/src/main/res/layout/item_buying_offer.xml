<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

    <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            tools:scaleType="centerCrop"
            tools:src="@drawable/test_image_2"
            tools:ignore="ContentDescription"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:background="@drawable/bg_gradient_bottom_dark">

            <TextView
                    android:id="@+id/name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:shadowColor="@color/black"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    tools:text="Advert name"
                    android:layout_alignStart="@+id/status_text_view"
                    android:layout_above="@+id/status_text_view"/>

            <TextView
                    android:id="@+id/date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    tools:text="13 march 2016"
                    android:layout_alignParentStart="true"/>

            <TextView
                    android:id="@+id/offer_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    tools:text="Â£25/3 kg"
                    tools:ignore="RelativeOverlap"/>

            <TextView
                    android:id="@+id/status_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:background="@color/colorAccent"
                    android:layout_above="@+id/date_text_view"
                    android:layout_alignStart="@+id/date_text_view"
                    tools:text="Accepted"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:background="@color/white">

            <Button
                    android:id="@+id/add_payment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:text="@string/add_payment"
                    android:theme="@style/FlatButtonPurple"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>