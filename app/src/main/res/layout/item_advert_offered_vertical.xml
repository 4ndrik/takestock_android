<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5">

        <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:scaleType="centerCrop"
                tools:src="@drawable/test_image"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_below="@+id/photo_image_view"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/black"
                tools:text="Beans"/>

        <TextView
                android:id="@+id/location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_below="@+id/name_text_view"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/grey_600"
                tools:text="Lviv, Ukraine"/>

        <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_below="@id/location_text_view"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/grey_600"
                tools:text="Feb 29, 2016"/>

        <TextView
                android:id="@+id/price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_below="@+id/date_text_view"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/black"
                tools:text="@string/advert_item_guide_price"/>

    </RelativeLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:background="@null"
            android:src="@drawable/layer_list_offered"
            tools:ignore="ContentDescription"/>

</android.support.v7.widget.CardView>