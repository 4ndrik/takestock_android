<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.search.SearchActivity"
        tools:background="@color/white">

    <include layout="@layout/content_activity_search"/>

    <android.support.design.widget.NavigationView
            android:id="@+id/filter_navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/content_drawer_header"
            app:menu="@menu/drawer_menu"/>

    <android.support.design.widget.NavigationView
            android:id="@+id/sort_navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:headerLayout="@layout/content_drawer_header"
            app:menu="@menu/drawer_menu"/>

    </android.support.v4.widget.DrawerLayout>