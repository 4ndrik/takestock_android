<resources>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EditTextLime" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_400</item>
    </style>

    <style name="EditTextPurple" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_400</item>
    </style>

    <style name="EditTextWeight" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:background">@drawable/rounded_corners_grey</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="TextViewLime" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewPurple" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/purple_dark</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewGrey" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FlatButtonLime" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/grey_400</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FlatButtonPurple" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/grey_400</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FlatButtonGrey" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RaisedButtonLime" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RaisedButtonPurple" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RaisedButtonRed" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/red_500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RaisedButtonGrey" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/grey_200</item>
        <item name="colorButtonNormal">@color/grey_600</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey_200</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_600</item>\
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@drawable/background_date_picker_dialog</item>
    </style>

    <style name="SortTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|start</item>
        <item name="android:drawableEnd">@drawable/ic_circle_grey_24dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="ViewDivider">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey_400</item>
    </style>

    <!-- Default Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="AppTheme.Dialog.Alert.Purple">
        <item name="colorPrimary">@color/purple_300</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/purple_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
