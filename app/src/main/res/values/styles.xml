<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Purple</item>
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_lime</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="EditTextLime" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/gold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_400</item>
    </style>

    <style name="EditTextPurple" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_400</item>
    </style>

    <style name="EditTextRoundedCornersGrey" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/grey_600</item>
        <item name="android:background">@drawable/rounded_corners_grey</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="EditTextRoundedCornersPurple" parent="EditTextRoundedCornersGrey">
        <item name="android:background">@drawable/rounded_corners_dark_purple</item>
    </style>

    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Small.Black" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Small.AllCaps" parent="TextAppearance.Small">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Small.AllCaps.Jam" parent="TextAppearance.Small.AllCaps">
        <item name="android:textColor">@color/jam</item>
    </style>

    <style name="TextAppearance.Small.AllCaps.Gold" parent="TextAppearance.Small.AllCaps">
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="TextAppearance.Small.AllCaps.Black" parent="TextAppearance.Small.AllCaps">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Medium.Black" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewPurple" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/jam</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewGrey" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FlatButtonLime" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/grey_400</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FlatButtonPurple" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/grey_400</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FlatButtonGrey" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.TakeStock.EditText" parent="Widget.AppCompat.EditText"/>

    <style name="Widget.TakeStock.EditText.Jam" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/jam</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_400</item>
    </style>

    <style name="Widget.TakeStock.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.TakeStock.Button.Gold" parent="Widget.TakeStock.Button">
        <item name="colorControlHighlight">@color/jam</item>
        <item name="colorButtonNormal">@color/gold</item>
    </style>

    <style name="Widget.TakeStock.Button.Jam" parent="Widget.TakeStock.Button">
        <item name="colorControlHighlight">@color/gold</item>
        <item name="colorButtonNormal">@color/jam</item>
    </style>

    <style name="Widget.TakeStock.Button.Red" parent="Widget.TakeStock.Button">
        <item name="colorControlHighlight">@color/jam</item>
        <item name="colorButtonNormal">@color/red_500</item>
    </style>

    <style name="Widget.TakeStock.Button.Grey" parent="Widget.TakeStock.Button">
        <item name="colorControlHighlight">@color/grey_200</item>
        <item name="colorButtonNormal">@color/grey_600</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_600</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@drawable/bg_date_picker_dialog</item>
    </style>

    <style name="SortTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|start</item>
        <item name="android:drawableEnd">@drawable/ic_circle_grey_24dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ViewDivider">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey_400</item>
    </style>

    <!-- Default Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="AppTheme.Dialog.Alert.Purple">
        <item name="colorPrimary">@color/purple_300</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/jam</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="ButtonStyle.Borderless" parent="Widget.AppCompat.Button.Borderless">
    </style>

    <!-- Selectable Item Styles -->
    <style name="SelectableItemStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SelectableItemStyle.Colored">
        <item name="android:background">?selectableRectDrawableColored</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
